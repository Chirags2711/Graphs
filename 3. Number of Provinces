// 1. Using traversal (any traversal)

public int findCircleNum(int[][] isConnected) {
    int V = isConnected.length;
    int ans = 0;
    boolean vis[] = new boolean[V];
    for(int i=0; i<V; i++){
        if(!vis[i]){
            traverse(isConnected, vis, i);
            ans++;
        }
    }
    return ans;
}

// BFS or DFS. Here, DFS is used.
public void traverse(int[][] isConnected, boolean vis[], int node){
        vis[node] = true;
        for(int v=0; v<isConnected[node].length; v++){
            if(isConnected[node][v] == 1 && !vis[v]){
                traverse(isConnected, vis, v);
            }
        }
    }
